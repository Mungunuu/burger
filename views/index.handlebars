<div class="container">
    <h1 class="userh1"> Eat Da Burger! </h1>
    <div class="row">
        <div class="column">
            <div class="all-burgers">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="column">
            <form class="create-form">
                <div class="form-group">
                    <label for="burgerlabel">What kind of burger do you want?</label>
                    <input type="text" id="burger-input"
                        class="form-control-lg">
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
        <div class="column">

            <div class="devoured-burger">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/devouredburger-block devoured=true}}
                {{/if}}
                {{/each}}

            </div>
        </div>

    </div>
</div>